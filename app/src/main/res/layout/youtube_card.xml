<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


<android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        android:padding="40dip"
        android:orientation="horizontal"
        card_view:cardCornerRadius="@dimen/card_album_radius">


        <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:text="CIRCULAR MOTION"
                android:textColor="#313030"
                android:background="#fff"
                android:textSize="23dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/profName"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:text="by Prof.Shiv Moorthy"
                    android:textColor="#000"
                    android:background="#fff"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    />
                <ImageView android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_star"
                   />
            </LinearLayout>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/propertyOwnerLayout"
            android:layout_marginTop="280dp"
            >
        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dip">

            <ImageView android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_aakash"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/Rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp">

            <TextView
                android:id="@+id/ownerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aakash Institute"
                android:textColor="#252323"
                android:typeface="sans"
                android:textSize="19dip"
                android:gravity="center" />
            <TextView
                android:id="@+id/ownerType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#565656"
                android:layout_marginTop="25dp"
                android:textSize="16dip"
                android:text="46536 views" />
        </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>